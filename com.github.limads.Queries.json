{
    "app-id" : "com.github.limads.Queries",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "queries",
    "finish-args" : [
        "--share=network",
        "--device=dri",
        "--socket=wayland",
        "--share=ipc",
        "--socket=fallback-x11",
        "--filesystem=home"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
	        "name" : "Queries",
	        "builddir" : true,
	        "buildsystem" : "simple",
	        "build-commands" : [
	            "sh ${FLATPAK_BUILDER_BUILDDIR}/scripts/build.sh"
	        ],
	        "sources" : [
	        
	        {
	            "type" : "archive",
	            "url" : "file:///home/diego/Downloads/queries/vendored.tar.gz",
	            "sha256" : "7e6e02a9db9bc67e56522cd1fcb23bbe5c1d519a5c4fa4c2027bd5043ce4d66b"
	        },
	        
		    {
		        "type" : "git",
		        "url" : "https://github.com/limads/queries.git"
		    }
		    
	        ],
	        "post-install" : [
	        	"sh ${FLATPAK_BUILDER_BUILDDIR}/scripts/postinstall.sh"
	        ]
	    }
    ]
}
