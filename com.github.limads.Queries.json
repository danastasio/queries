{
    "app-id" : "com.github.limads.Queries",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "queries",
    "finish-args" : [
        "--share=network",
        "--device=dri",
        "--socket=wayland",
        "--share=ipc",
        "--socket=fallback-x11",
        "--filesystem=home"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "build-args" : [
            "--share=network"
        ]
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],

    "modules" : [
        {
	        "name" : "Queries",
	        "builddir" : true,
	        "buildsystem" : "simple",
	        "build-commands" : [
	            "sh ${FLATPAK_BUILDER_BUILDDIR}/build.sh"
	        ],  
	        "sources" : [
	        
	        {
	            "type" : "archive",
	            "url" : "file:///home/diego/Downloads/queries-deps.tar.gz",
	            "sha256" : "c2faf089b499c47df554b307fc00c8370bb7ab251a6f90c056b38fd37cbec5c4"
	        },
	        
		    {
		        "type" : "git",
		        "url" : "file:///home/diego/Software/gnome/queries"
		    }
		    
	        ],
	        "post-install" : [
	        	"sh ${FLATPAK_BUILDER_BUILDDIR}/postinstall.sh"
	        ]
	    }
    ]
}
